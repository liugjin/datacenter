.row.nav-top
    .col.s2
        span(style="font-size: 14px") 底图配置
    .col.l10
        station-breadcrumbs(controller="controller", parameters="{}")
.inventory(style="margin-right: 0;")
    .row.upload-box
        .col.s12.m12.l12(style="height: 100%;display: flex;align-items: center")
            .upload
                .choiceLabel
                    span 选择首页底图图片:
                .choiceRoute
                    input#upload.file(type="file"  style="display: none;")
                    input(name="fileName" value="{{fileNameStr}}" readonly)
                    #file.browseBtn(ng-click="fileUpload()") ...
                .confirmUpload.btn(ng-click="confirmSha()")
                    span 确认上传
    .row.show-baseMap
        .col.s6.m6.l6(style="height: 100%;padding-right:0.375rem")
            .baseMap
                .baseMapImg
                    img(ng-src='{{imgUrl}}' width="100%" height="100%" ng-if="imgshow")
                .baseMapName
                    span 本地底图界面
        .col.s6.m6.l6(style="height: 100%;padding-left:0.375rem")
            .baseMap
                .baseMapImg
                    img(ng-src='{{setting.urls.uploadUrl}}/{{station.model.image}}' width="100%" height="100%")
                .baseMapName
                    span 当前系统底图界面
