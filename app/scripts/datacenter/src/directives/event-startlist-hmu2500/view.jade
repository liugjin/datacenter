#event-startlist-prompt-modal.modal
    .modal-content
        p
            span.modal-title {{modal.tips}}:
            span.modal-info {{modal.info}}
        p
            span.modal-remark {{modal.message}}
        input(type='text', ng-model='modal.comment', ng-show='modal.enableComment')
    .modal-footer
        .modal-CONTRIM.modal-action.right.modal-close(ng-click='modal.confirm(true)')
            i.material-icons done
            span 确认
        .modal-CANCEL.modal-action.right.modal-close(ng-click='modal.confirm(false)')
            i.material-icons close
            span 取消

