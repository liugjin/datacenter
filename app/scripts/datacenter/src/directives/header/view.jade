    //li
        a(ng-href='{{serviceAuth}}/#/users/{{rootUser}}', target='_blank', translate='MENU.USER_INFO') 用户信息
    li
        a(href='', ng-click='logout()', translate='MENU.LOGOUT') 注销登录

ul.notify(style="display: none;")
    li.list-item(style="width: 25px;cursor:pointer;")
        .text-icon(ng-click="setvoice()")
            img(style="width: 25px;" ng-src="{{ismute ? muteimg:voiceimg}}")
    li#abc.title
        .text-content 告警通知
        .text-icon(ng-click="close(message[0])" style="cursor:pointer;")
            span(title="关闭告警通知")
                i.material-icons trending_flat
    li.list-item(ng-repeat="(key, val) in message" ng-if="key != 0") {{val}}